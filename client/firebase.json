{
  "hosting": {
    "public": "./build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],"headers": [ {
      "source" : "index.html",
      "headers" : [ {
        "key" : "Access-Control-Allow-Origin",
        "value" : "*"
      } ]
    } ],
    "rewrites": [
      {
        "source": "/api/**",
        "destination": "/api/**"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
